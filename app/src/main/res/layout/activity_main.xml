<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView android:id="@+id/liczby" android:layout_height="wrap_content" android:layout_width="match_parent" android:textSize="50sp"/>
        <TableLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:gravity="center_horizontal">
            <TableRow
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <Button
                    android:id="@+id/test"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_span="2"
                    android:text="CE"
                    android:layout_margin="5dp"
                    android:onClick="czyszczenie"
                    />
                <Button android:text="BKSP" android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_margin="5dp" android:onClick="bksp"/>
                <Button android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_margin="5dp" android:text="%" android:onClick="procent"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <Button android:text="1/x" android:layout_margin="5dp" android:layout_width="match_parent"
                    android:layout_height="match_parent" android:onClick="odwrotnosc"/>
                <Button android:text="SQRT" android:layout_margin="5dp" android:layout_width="match_parent"
                    android:layout_height="match_parent" android:onClick="pierwiastek"/>
                <Button android:text="SQR" android:layout_margin="5dp" android:layout_width="match_parent"
                    android:layout_height="match_parent" android:onClick="potega"/>
                <Button android:text="/" android:layout_margin="5dp" android:layout_width="match_parent"
                    android:layout_height="match_parent" android:onClick="dzielenie"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <Button android:text="7" android:layout_margin="5dp" android:layout_width="match_parent"
                    android:layout_height="match_parent" android:onClick="siedem"/>
                <Button android:text="8" android:layout_margin="5dp" android:layout_width="match_parent"
                    android:layout_height="match_parent" android:onClick="osiem"/>
                <Button android:text="9" android:layout_margin="5dp" android:layout_width="match_parent"
                    android:layout_height="match_parent" android:onClick="dziewiec"/>
                <Button android:text="*" android:layout_margin="5dp" android:layout_width="match_parent"
                    android:layout_height="match_parent" android:onClick="mnozenie"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <Button android:text="4" android:layout_margin="5dp" android:layout_width="match_parent"
                    android:layout_height="match_parent" android:onClick="cztery"/>
                <Button android:text="5" android:layout_margin="5dp" android:layout_width="match_parent"
                    android:layout_height="match_parent" android:onClick="piec"/>
                <Button android:text="6" android:layout_margin="5dp" android:layout_width="match_parent"
                    android:layout_height="match_parent" android:onClick="szesc"/>
                <Button android:text="-" android:layout_margin="5dp" android:layout_width="match_parent"
                    android:layout_height="match_parent" android:onClick="minus"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <Button android:text="1" android:layout_margin="5dp" android:layout_width="match_parent"
                    android:layout_height="match_parent" android:onClick="jeden"/>
                <Button android:text="2" android:layout_margin="5dp" android:layout_width="match_parent"
                    android:layout_height="match_parent" android:onClick="dwa"/>
                <Button android:text="3" android:layout_margin="5dp" android:layout_width="match_parent"
                    android:layout_height="match_parent" android:onClick="trzy"/>
                <Button android:text="+" android:layout_margin="5dp" android:layout_width="match_parent"
                    android:layout_height="match_parent" android:onClick="plus"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <Button android:text="+/-" android:layout_margin="5dp" android:layout_width="match_parent"
                    android:layout_height="match_parent" android:onClick="zmienznak"/>
                <Button android:text="0" android:layout_margin="5dp" android:layout_width="match_parent"
                    android:layout_height="match_parent" android:onClick="zero"/>
                <Button android:text="," android:layout_margin="5dp" android:layout_width="match_parent"
                    android:layout_height="match_parent" android:onClick="przecinek"/>
                <Button android:text="=" android:layout_margin="5dp" android:layout_width="match_parent"
                    android:layout_height="match_parent" android:onClick="rownanie"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>